<html>
<head>
  <link rel="stylesheet" type="text/css" href="/styles.css">
    <link href='http://fonts.googleapis.com/css?family=Gloria+Hallelujah' rel='stylesheet' type='text/css'>
  <title><%=author.first%></title>
</head>
<body>
<h1><%=author.first%> <%=author.last%></h1>
<div class="wrapper">
  <h3><a href="/authors">BACK</a></h3>
    <%if documents.length == 0 %>
      <h2>NO DOCUMENTS WRITTEN</h2>
    <%else%>
      <h2>DOCUMENTS CREATED</h2>
      <ul>
      <%documents.each do |document|%>
        <h3><li><a href="/document/<%=document.id%>"><%=document.name.upcase%></a></li></h3>
       <%end%>
      <%end%>
    </ul>
  <%if documentsedited.length == 0 && editeddocuments.length == 0%>
      <h2>NO EDITED DOCUMENTS</h2>
    <%else%>
      <h2>DOCUMENTS EDITED</h2>
      <ul>
      <%documentsedited.each do |document|%>
      <h3><li><a href="/document/<%=document[0].id%>"><%=document[0].name.upcase%></a></li>
      <%end%></h3>
      <%editeddocuments.each do |document|%>
      <h3><li><a href="/document/<%=document.id%>"><%=document.name.upcase%></a></li></h3>
     <%end%>
  <%end%>
  </ul>
</div>

</body>
</html>